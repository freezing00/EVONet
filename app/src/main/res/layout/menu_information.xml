<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="320dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/purple_700">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_margin="15dp"
            android:id="@+id/userImage"
            android:src="@mipmap/ic_log"/>

        <TextView
            android:id="@+id/info_id"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="50dp"
            android:text="1900101513"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/info_name"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="40dp"
            android:text="freezing"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/id_code"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="250dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_qr_code_24"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/layout_account_manager"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/account_manage"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="账户管理"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_message"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/message"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="消息通知"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_major"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/major"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="学院与专业查询"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_course_table"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/course_table"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="查阅周课表"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_for_us"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/for_us"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="关于我们"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:id="@+id/layout_setting"
        android:onClick="onClick"
        android:clickable="true"
        tools:ignore="OnClick"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="25dp"
            android:src="@drawable/setting"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:layout_marginStart="100dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
</LinearLayout>